<div class="main-content container">
    <h1 class="text-center">My books</h1>
    <%= search_form_for @q do |f| %>
        <%= f.label :status_eq, "Status" %> 
        <%= f.select :status_eq, options_for_select(Book.statuses, @q.status_eq), {} %>
        <%= f.submit %>
    <% end %> 

    <table  class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col"><%= sort_link(@q, :title) %></th>
                <th scope="col"><strong>Autor</strong></th>
                <th scope="col"><strong>Status</strong></th>
                <th scope="col"><strong>Fecha prestamo</strong></th>
                <th scope="col">Fecha retorno</th>
                <th colspan="3" scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |b| %>
            <tr>
                <td> <%= b.title %></td>
                <td><%= b.author %></td>
                <td><%= b.status %></td>
                <td><%= b.borrowed_at.strftime('%d-%m-%Y') %></td>
                <td><%= b.returned_at.strftime('%d-%m-%Y')  %></td>
                <td><%= link_to 'Show', b %></td>
                <td><%= link_to 'Edit', edit_book_path(b)%></td>
                <td><%= link_to 'Destroy', b, method: :delete, data: {confirm: ''}%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <button>
    <%= link_to 'Nuevo libro', new_book_path %>
    </button>
</div>
